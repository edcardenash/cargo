<%= form_with(url: vehicles_path, method: :get, html: {class: "d-flex"})  do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control radius",
      placeholder: "Encuentra un transportista en tu ciudad"
    %>
  <%= submit_tag "Buscar", class: "btn btn-success boton-login ms-2 radius" %>
<% end %>
