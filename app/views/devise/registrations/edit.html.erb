<div class="container col-6">
  <div class="row carrier-show radius mt-4 p-4">
    <header>Edita tu perfil</header>
  </div>
  <div class="container my-3 border border-3">
    <div class="row p-4 m-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, label: "Nombre" %>
          <%= f.input :last_name, label: "Apellido" %>
          <%= f.input :address, label: "Dirección" %>
          <%= f.input :phone, label: "Teléfono" %>
          <%= f.input :photo, label: "Foto", as: :file %>
          <%= f.input :email, label: "Correo electrónico", required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Actualmente esperando confirmación: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, label: "Contraseña",
                      hint: "Déjalo en blanco si no quieres cambiarlo",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirmación de contraseña",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password, label: "Contraseña actual",
                      hint: "Necesitamos tu contraseña actual para confirmar los cambios",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="row form-actions m-0">
          <%= f.button :submit, "Actualizar cuenta", class: "btn btn-success boton-login btn-sm" %>
        </div>
      <% end %>
      <div class="row form-actions mx-0 mt-3">
        <%= link_to "Eliminar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class: "btn btn-danger boton-login btn-sm" %>
      </div>
      <div class="row mx-0 mt-3">
        <%= link_to "Regresar", :back, class: "btn btn-warning boton-login btn-sm" %>
      </div>
    </div>
  </div>
</div>
