<div class="container col-6">
  <div class="row carrier-show radius mt-4 p-4">
    <header>Regístrate</header>
  </div>
  <div class="container my-3 border border-3">
    <div class="row p-4 m-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: "Correo electrónico",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.association :city, label: "Ciudad o Comuna"  %>
          <%= f.input :password, label: "Contraseña",
                      required: true,
                      hint: ("#{@minimum_password_length} carácteres mínimos" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirmar contraseña",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Regístrate", class: "btn btn-success boton-login btn-sm" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
