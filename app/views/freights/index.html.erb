<div class="row align-items-center mt-3">
  <div class="col-6">
    <h1 class="text-center">Listado de Solicitudes de Carga</h1>
  </div>
  <div class="col-6 text-center">
  <%= link_to "Publicar solicitud de carga", new_freight_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
  <% @freights.each do |freight| %>
    <div class="card m-2 shadow-sm p-3 mb-5 bg-body rounded" style="width: 18rem;">
      <div class="row">
            <%
            puts "freight"
            puts freight.photos.first %>
        <div class="card-body">
          <h5 class="card-title"><%= freight.address%></h5>
          <div><%= freight.start_date.strftime('%m/%d/%Y')  %></div>
          <p class="card-text"><%= freight.description  %></p>
        </div>
      </div>
      <div class="row text-center">
        <%= link_to 'Ver detalles', freight, class: "btn btn-outline-success btn-sm mt-1"%>
      </div>
    </div>
  <% end %>
  </div>
</div>
