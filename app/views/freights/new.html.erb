<div class="container col-6">
  <div class="row carrier-show radius mt-4 p-4">
    <header>Nueva solicitud de transporte</header>
  </div>
  <div class="container my-3 border border-3">
    <div class="row p-4 m-4">
      <%= simple_form_for @freight do |f| %>
        <strong><%= f.input :description, label: "DescripciÃ³n", as: :text  %></strong>
        <strong><%= f.input :receiver_name, label: "Nombre del receptor", as: :text %></strong>
        <strong><%= f.input :receiver_phone, label: "Telefono del receptor", as: :text %></strong>
        <div data-controller="search-address">

        <%= form_with url: freights_path, method: :get, html: {class:
            "mb-4", data: {search_freights_target: "formulario"}} do |f| %>
            <%= f.text_field :query,
                            placeholder: "Ingrese la direccion de origen",
                            value: params[:query],
                            data: {search_freights_target: "input",
                                    action: "keyup->search-address#update"
                                  }%>
          <% end %>

        </div>
        <strong><%= f.label :start_date, "Fecha"%></strong>
        <strong><%= f.date_field :start_date ,min_max: true, min: Date.today, required: true, style: "width: 100%" %></strong>
        <strong><%= f.input :round_trip, label: "Â¿Ida y vuelta?",  html: { class: "mt-3 mb-3"}%></strong>
        <strong><%= f.input :photos, as: :file, input_html: { multiple: true } %></strong>
        <div class="row m-0">
          <%= f.button :submit,"Publicar", class: "btn btn-success boton-login btn-sm"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
